<%- include("header"); -%>
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="box" id="heading">
                    <%= listTitle %>
                </h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-white">
                    <div class="card-body">
                        <form action="" method="post">
                            <input type="text" class="form-control add-task" placeholder="New Item" name="item" autocomplete="off">
                            <button type="submit" name="list" value=<%=listTitle %> style="display: none;"></button>
                        </form>
                        <div class="todo-list">
                            <% for (var i = 0; i < item.length; ++i) { %>
                            <div id=<%= 'item'+i %> class="todo-item">
                                <input type="checkbox">
                                <span class="item">
                                    <%= item[i] %></span>
                                        <span class="remove-item" id=<%= 'remove'+i %>><i class="fa fa-trash trash"></i></span>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('document').ready(function(e){
        $('.remove-item').click(function() {
        var removeId = $(this).attr('id');
        var i = removeId.slice(6);
        $('#item'+i).remove();
    })
    })
    
</script>
<%- include("footer"); -%>